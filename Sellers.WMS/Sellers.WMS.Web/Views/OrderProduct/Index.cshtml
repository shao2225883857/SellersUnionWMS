
@model IEnumerable<Sellers.WMS.Domain.OrderProductType>
@{
    ViewBag.Title = "Index";
}
<body class="easyui-layout">
<script language="javascript" type="text/javascript">
        var grid;
        $(function () {
            grid = $('#dg').datagrid({
                url:  '@Url.Action("List", "OrderProduct")',
                idField: 'Id',
                iconCls: 'icon-view',
                height: 600,
                width: function () { return document.body.clientWidth * 0.9 },
                nowrap: true,  
				singleSelect:true, 
				animate: true,  
				resizable: true,  
                pagination: true,
				pageNumber: 1,
                pageSize: 100,
                pageList: [50, 100, 200],
                rownumbers: true,
                columns: [[
                    { title: '主键', field: 'Id', width: 100, sortable: true, hidden: true },
                    { title: '订单ID', field: 'OId', width: 100, sortable: true,align: 'center' },
                    { title: '订单号', field: 'OrderNo', width: 100, sortable: true,align: 'center' },
                    { title: '外部商品SKU', field: 'ExSKU', width: 100, sortable: true,align: 'center' },
                    { title: '名称', field: 'Title', width: 100, sortable: true,align: 'center' },
                    { title: '数量', field: 'Qty', width: 100, sortable: true,align: 'center' },
                    { title: '对应内部库存SKU', field: 'SKU', width: 100, sortable: true,align: 'center' },
                    { title: '产品描述', field: 'Remark', width: 100, sortable: true,align: 'center' },
                    { title: '产品规格', field: 'Standard', width: 100, sortable: true,align: 'center' },
                    { title: '产品价格', field: 'Price', width: 100, sortable: true,align: 'center' },
                    { title: '产品网址', field: 'Url', width: 100, sortable: true,align: 'center' }

                ]]
                ,
                toolbar: '#toolbar',
				rowStyler: function (index, row, css) {
					if (row.Id != "") {
						return 'font-weight:bold;';
					}
				},
				onLoadSuccess: function (data) {
					if (data.rows.length > 0) {
						$('#dg').datagrid("selectRow", 0);
					}
				}
            })
        });

        function addClick() {
            parent.$.modalDialog({
                title: '添加数据',
                width: 650,
                height: 350,
                href: '@Url.Action("Create", "OrderProduct")',
                buttons: [{
                    text: '添加',
                    handler: function () {
                        parent.$.modalDialog.penner_grid = grid;//将grid绑定到公共变量中
                        var f = parent.$.modalDialog.handler.find('#form');
                        f.submit();
                    }
                }]
            });
        }

        //编辑框
        function editClick() {
            var id = getselectedRow(grid);
            if (id) {
                parent.$.modalDialog({
                    title: '编辑数据',
                    width: 650,
                    height: 300,
                    href: '@Url.Action("Edit", "OrderProduct")/' + id,
                    buttons: [{
                        text: '修改',
                        handler: function () {
                            parent.$.modalDialog.penner_grid = grid;//将grid绑定到公共变量中
                            var f = parent.$.modalDialog.handler.find('#form');
                            f.submit();
                        }
                    }]
                });
            }
        }

        function doSearch() {
            var search = "";
            if ($('#txtId').val().length != 0)
                search += 'Id&' + $('#txtId').val() + '^';
            if ($('#txtOId').val().length != 0)
                search += 'OId&' + $('#txtOId').val() + '^';
            if ($('#txtOrderNo').val().length != 0)
                search += 'OrderNo&' + $('#txtOrderNo').val() + '^';
            if ($('#txtExSKU').val().length != 0)
                search += 'ExSKU&' + $('#txtExSKU').val() + '^';
            if ($('#txtTitle').val().length != 0)
                search += 'Title&' + $('#txtTitle').val() + '^';
            if ($('#txtQty').val().length != 0)
                search += 'Qty&' + $('#txtQty').val() + '^';
            if ($('#txtSKU').val().length != 0)
                search += 'SKU&' + $('#txtSKU').val() + '^';
            if ($('#txtRemark').val().length != 0)
                search += 'Remark&' + $('#txtRemark').val() + '^';
            if ($('#txtStandard').val().length != 0)
                search += 'Standard&' + $('#txtStandard').val() + '^';
            if ($('#txtPrice').val().length != 0)
                search += 'Price&' + $('#txtPrice').val() + '^';
            if ($('#txtUrl').val().length != 0)
                search += 'Url&' + $('#txtUrl').val() + '^';

            grid.datagrid("load", {
                search: search
            });
        }
</script>
<div region="center">
		<fieldset>
            <legend>数据查询</legend>
            <table border="0">
                                 <tr>
                    <td class='z-searchlable'>主键:</td>
                    <td><input type='text' id='txtId' /></td>
                    <td class='z-searchlable'>订单ID:</td>
                    <td><input type='text' id='txtOId' /></td>
                    <td class='z-searchlable'>订单号:</td>
                    <td><input type='text' id='txtOrderNo' /></td>
                    <td class='z-searchlable'>外部商品SKU:</td>
                    <td><input type='text' id='txtExSKU' /></td>
                </tr>
                <tr>
                    <td class='z-searchlable'>名称:</td>
                    <td><input type='text' id='txtTitle' /></td>
                    <td class='z-searchlable'>数量:</td>
                    <td><input type='text' id='txtQty' /></td>
                    <td class='z-searchlable'>对应内部库存SKU:</td>
                    <td><input type='text' id='txtSKU' /></td>
                    <td class='z-searchlable'>产品描述:</td>
                    <td><input type='text' id='txtRemark' /></td>
                </tr>
                <tr>
                    <td class='z-searchlable'>产品规格:</td>
                    <td><input type='text' id='txtStandard' /></td>
                    <td class='z-searchlable'>产品价格:</td>
                    <td><input type='text' id='txtPrice' /></td>
                    <td class='z-searchlable'>产品网址:</td>
                    <td><input type='text' id='txtUrl' /><a href='#' class='easyui-linkbutton' iconcls='icon-search' onclick='doSearch();'>查询</a></td>
                        
                </tr>

            </table>
        </fieldset>
		<div id="toolbar">
			@Html.Raw(ViewData["toolbarButtons"])
        </div> 
        <table id="dg">
        </table>
		<div id="dropdown" style="width:200px; display:none;">  
			<div data-options="iconCls:'icon-ext-xls'"      data-bind="click:downloadClick1">Excel2003表格所有页</div>  
			<div data-options="iconCls:'icon-ext-xls'"      data-bind="click:downloadClick2">Excel2003表格指定页</div> 
			<div data-options="iconCls:'icon-ext-rar'"      data-bind="click:downloadClick3">Excel2003压缩zip</div>  
			<div data-options="iconCls:'icon-page_excel'"   data-bind="click:downloadClick4">Excel2007/2010</div>  
			<div data-options="iconCls:'icon-ext-pdf'"      data-bind="click:downloadClick5">PDF</div>  
			<div data-options="iconCls:'icon-ext-doc'"      data-bind="click:downloadClick6">Word</div>   
		</div>
</div>
</body>
