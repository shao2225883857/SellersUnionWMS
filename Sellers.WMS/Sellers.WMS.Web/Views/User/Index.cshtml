@model IEnumerable<Sellers.WMS.Domain.UserType>
@{
    ViewBag.Title = "Index";
}

<script language="javascript" type="text/javascript">
    var grid;
    $("body").addClass("easyui-layout");
    var cid = 0;
    $(function () {


        grid = $('#dg').datagrid({
            url: '@Url.Action("List", "User")',
            idField: 'Id',
            iconCls: 'icon-view',
            height: 450,
            width: function () { return document.body.clientWidth * 0.9 },
            nowrap: true,
            singleSelect: true,
            animate: true,
            resizable: true,
            pagination: true,
            pageNumber: 1,
            pageSize: 100,
            pageList: [50, 100, 200],
            rownumbers: true,
            columns: [[
                { title: '主键', field: 'Id', width: 100, sortable: true, hidden: true },
                { title: '编号', field: 'Code', width: 100, sortable: true, align: 'center' },
                { title: '登录名', field: 'Username', width: 100, sortable: true, align: 'center' },
                { title: '姓名', field: 'Realname', width: 100, sortable: true, align: 'center' },
                { title: '角色名称', field: 'RoleName', width: 100, sortable: true, align: 'center' },
                { title: '公司', field: 'CompanyName', width: 100, sortable: true, align: 'center' },
                { title: '部门名称', field: 'DepartmentName', width: 100, sortable: true, align: 'center' },
                { title: '性别', field: 'Gender', width: 100, sortable: true, align: 'center' },
                { title: '电话', field: 'Telephone', width: 100, sortable: true, align: 'center' },
                { title: '手机', field: 'Mobile', width: 100, sortable: true, align: 'center' },
                { title: '出生日期', field: 'Birthday', width: 100, sortable: true, align: 'center', formatter: getDate },
                { title: '电子邮件', field: 'Email', width: 100, sortable: true, align: 'center' },
                { title: '家庭住址', field: 'HomeAddress', width: 100, sortable: true, align: 'center' },
                { title: '最后访问时间', field: 'LastVisit', width: 100, sortable: true, align: 'center',formatter:getDate },
                { title: '备注', field: 'Description', width: 100, sortable: true, align: 'center' }
            ]],
            toolbar: '#toolbar',
          
            onLoadSuccess: function (data) {
                if (data.rows.length > 0) {
                    $('#dg').datagrid("selectRow", 0);
                }
            }
    });
        
        $('#uitree').tree({
            url: '@Url.Action("ALLTreeList", "Organize")',
            state: closed,
            onClick: function (node) {
                cid = node.id;
                doSearch();
            }
        });
    });

    function addClick() {
        parent.$.modalDialog({
            title: '添加数据',
            width: 650,
            height: 450,
            href: '@Url.Action("Create", "User")',
            buttons: [{
                text: '添加',
                handler: function () {
                    parent.$.modalDialog.penner_grid = grid;//将grid绑定到公共变量中
                    var f = parent.$.modalDialog.handler.find('#form');
                    f.submit();
                }
            }]
        });
    }
    
    function moduleSetup() {
        parent.$.modalDialog({
            title: '设置用户菜单',
            width: 650,
            height: 500,
            href: '@Url.Action("SetupUserModule", "User")'
        });
    }

    //编辑框
    function editClick() {
        var id = getselectedRow(grid);
        if (id) {
            parent.$.modalDialog({
                title: '编辑数据',
                width: 650,
                height: 450,
                href: '@Url.Action("Edit", "User")/' + id,
                buttons: [{
                    text: '修改',
                    handler: function () {
                        parent.$.modalDialog.penner_grid = grid;//将grid绑定到公共变量中
                        var f = parent.$.modalDialog.handler.find('#form');
                        f.submit();
                    }
                }]
            });
        }
    }
    
    function doSearch() {
        var search = "";
        if (cid != 0)
            search += 'CId&' + cid + '^';
        if ($('#txtCode').val().length != 0)
            search += 'Code&' + $('#txtCode').val() + '^';
        if ($('#txtUsername').val().length != 0)
            search += 'Username&' + $('#txtUsername').val() + '^';
        if ($('#txtRealname').val().length != 0)
            search += 'Realname&' + $('#txtRealname').val() + '^';
        if ($('#txtRoleName').val().length != 0)
            search += 'RoleName&' + $('#txtRoleName').val() + '^';
        grid.datagrid("load", {
            search: search
        });
    }

</script>

<div data-options="region:'west',split:true,title:'组织机构'" style="width: 150px; padding: 10px;">
    <ul id="uitree" class="easyui-tree"></ul>
</div>
<div data-options="region:'center'">
    <fieldset>
        <legend>数据查询</legend>
        <table border="0">
            <tr>
                <td class='z-searchlable2'>编号:</td>
                <td>
                    <input type='text' id='txtCode' /></td>
                <td class='z-searchlable2'>登录名:</td>
                <td>
                    <input type='text' id='txtUsername' /></td>
                <td class='z-searchlable2'>姓名:</td>
                <td>
                    <input type='text' id='txtRealname' /></td>
                <td class='z-searchlable2'>角色名称:</td>
                <td>
                    <input type='text' id='txtRoleName' />
                    <a href='#' class='easyui-linkbutton' iconcls='icon-search' onclick='doSearch();'>查询</a></td>
            </tr>

        </table>
    </fieldset>
    <div id="toolbar">
        @Html.Raw(ViewData["toolbarButtons"])
    </div>
    <table id="dg">
    </table>
    <div id="dropdown" style="width: 200px; display: none;">
        <div data-options="iconCls:'icon-ext-xls'" data-bind="click: downloadClick1">Excel2003表格所有页</div>
        <div data-options="iconCls:'icon-ext-xls'" data-bind="click: downloadClick2">Excel2003表格指定页</div>
        <div data-options="iconCls:'icon-ext-rar'" data-bind="click: downloadClick3">Excel2003压缩zip</div>
        <div data-options="iconCls:'icon-page_excel'" data-bind="click: downloadClick4">Excel2007/2010</div>
        <div data-options="iconCls:'icon-ext-pdf'" data-bind="click: downloadClick5">PDF</div>
        <div data-options="iconCls:'icon-ext-doc'" data-bind="click: downloadClick6">Word</div>
    </div>
</div>


