@model Sellers.WMS.Domain.ModuleType
@{
    Layout = null;
}
<script type="text/javascript">
    $(function () {
        //这里写加载下拉列表、修改编辑控件的初始化值
		//parent.$.messager.progress('close');

        $('#form').form({
            url: '@Url.Action("Edit", "Module")',
            onSubmit: function () {
                parent.$.messager.progress({
                    title: '提示',
                    text: '数据处理中，请稍后....'
                });
                var isValid = $(this).form('validate');
                if (!isValid) {
                    parent.$.messager.progress('close');
                }
                return isValid;
            },
            success: function (result) {
                parent.$.messager.progress('close');
                result = $.parseJSON(result);
                if (result.IsSuccess) {
                    parent.$.modalDialog.openner_treeGrid.treegrid('reload');//之所以能在这里调用到parent.$.modalDialog.openner_treeGrid这个对象，是因为resource.jsp页面预定义好了
                    //parent.layout_west_tree.tree('reload');
                    //parent.$.modalDialog.penner_grid.datagrid('reload');
                    parent.$.modalDialog.handler.dialog('close');
                }
                else {
                    alert(result.Result);
                }
            }
        });
    });
</script>
<div class="easyui-layout" data-options="fit:true,border:false">
    <div data-options="region:'center',border:false" title="" style="overflow: hidden;">
        @using (Html.BeginForm("", "", FormMethod.Post, new { id = "form" }))
        {
            <table class="grid">
                <tr>
                    <td align="right">主键：</td>
                    <td align="left"><input  type='text' name='Id' id='Id' value='@Model.Id' ></input></td>
                    <td align="right">父节点主键：</td>
                    <td align="left"><input  type='text' name='ParentId' id='ParentId' value='@Model.ParentId' ></input></td>
                </tr>
                <tr>
                    <td align="right">编号：</td>
                    <td align="left"><input  type='text' name='Code' id='Code' value='@Model.Code' ></input></td>
                    <td align="right">名称：</td>
                    <td align="left"><input  type='text' name='FullName' id='FullName' value='@Model.FullName' ></input></td>
                </tr>
                <tr>
                    <td align="right">图标编号：</td>
                    <td align="left"><input  type='text' name='ImageIndex' id='ImageIndex' value='@Model.ImageIndex' ></input></td>
                    <td align="right">导航地址：</td>
                    <td align="left"><input  type='text' name='NavigateUrl' id='NavigateUrl' value='@Model.NavigateUrl' ></input></td>
                </tr>
                <tr>
                    <td align="right">排序码：</td>
                    <td align="left"><input  type='text' name='SortCode' id='SortCode' value='@Model.SortCode' ></input></td>
                    <td align="right">备注：</td>
                    <td align="left"><input  type='text' name='Description' id='Description' value='@Model.Description' ></input></td>
                </tr>

			</table>
        }
    </div>
</div>
