                    <td align="left"><input  type='text' name='Status' id='Status' value='@Model.Status' ></input></td>
                    <td align="right">商品特性：</td>
                    <td align="left"><input  type='text' name='ProductAttr' id='ProductAttr' value='@Model.ProductAttr' ></input></td>
                </tr>
                <tr>
                    <td align="right">类别：</td>
                    <td align="left"><input  type='text' name='Category' id='Category' value='@Model.Category' ></input></td>
                    <td align="right">型号：</td>
                    <td align="left"><input  type='text' name='Model' id='Model' value='@Model.Model' ></input></td>
                </tr>
