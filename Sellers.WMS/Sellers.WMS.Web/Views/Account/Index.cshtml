@model IEnumerable<Sellers.WMS.Domain.AccountType>
@{
    ViewBag.Title = "Index";
}
<body class="easyui-layout">
    <script language="javascript" type="text/javascript">
        var grid;
        $(function () {
            $('#txtPlatform').combobox({
                url: '@Url.Action("GetSearchOptions", "DataDictionaryDetail")/SalePlatform',
                valueField: 'DicValue',
                textField: 'FullName',
                panelHeight: 'auto'
            });

            grid = $('#dg').datagrid({
                url: '@Url.Action("List", "Account")',
                idField: 'Id',
                iconCls: 'icon-view',
                height: 600,
                width: function () { return document.body.clientWidth * 0.9 },
                nowrap: true,
                singleSelect: true,
                animate: true,
                resizable: true,
                pagination: true,
                pageNumber: 1,
                pageSize: 100,
                pageList: [50, 100, 200],
                rownumbers: true,
                columns: [[
                    { title: '主键', field: 'Id', width: 100, sortable: true, hidden: true },
                    { title: '账户名称', field: 'AccountName', width: 100, sortable: true, align: 'center' },
                    { title: '平台网址', field: 'AccountUrl', width: 100, sortable: true, align: 'center' },
                    { title: 'APIKey', field: 'ApiKey', width: 100, sortable: true, align: 'center' },
                    { title: 'API密钥', field: 'ApiSecret', width: 100, sortable: true, align: 'center' },
                    { title: 'API会话', field: 'ApiToken', width: 100, sortable: true, align: 'center' },
                    { title: '平台', field: 'Platform', width: 100, sortable: true, align: 'center' },
                    { title: '状态', field: 'Status', width: 100, sortable: true, align: 'center' },
                    { title: '描述', field: 'Description', width: 100, sortable: true, align: 'center' },
                    { title: '负责人', field: 'Manager', width: 100, sortable: true, align: 'center' }
                ]],
                toolbar: '#toolbar'

            });
        });

            function addClick() {
                parent.$.modalDialog({
                    title: '添加数据',
                    width: 650,
                    height: 350,
                    href: '@Url.Action("Create", "Account")',
                    buttons: [{
                        text: '添加',
                        handler: function () {
                            parent.$.modalDialog.penner_grid = grid;//将grid绑定到公共变量中
                            var f = parent.$.modalDialog.handler.find('#form');
                            f.submit();
                        }
                    }]
                });
            }

            //编辑框
            function editClick() {
                var id = getselectedRow(grid);
                if (id) {
                    parent.$.modalDialog({
                        title: '编辑数据',
                        width: 650,
                        height: 300,
                        href: '@Url.Action("Edit", "Account")/' + id,
                        buttons: [{
                            text: '修改',
                            handler: function () {
                                parent.$.modalDialog.penner_grid = grid;//将grid绑定到公共变量中
                                var f = parent.$.modalDialog.handler.find('#form');
                                f.submit();
                            }
                        }]
                    });
                }
            }

            function doSearch() {
                var search = "";
                if ($('#txtPlatform').combobox("getValue").length != 0 && $('#txtPlatform').combobox("getValue") != 0)
                    search += 'Platform&' + $('#txtCCountry').val() + '^';
                if ($('#txtAccountName').val().length != 0)
                    search += 'AccountName&' + $('#txtAccountName').val() + '^';
                grid.datagrid("load", {
                    search: search
                });
            }

    </script>
    <div region="center">
        <fieldset>
            <legend>数据查询</legend>
            <table border="0">
                <tr>
                    <td>
                        <label>平台:</label><input type='text' id='txtPlatform' /></td>
                    <td>
                        <label>账户名称:</label><input type='text' id='txtAccountName' /><a href='#' class='easyui-linkbutton' iconcls='icon-search' onclick='doSearch();'>查询</a></td>
                </tr>
            </table>
        </fieldset>
        <div id="toolbar">
            @Html.Raw(ViewData["toolbarButtons"])
        </div>
        <table id="dg">
        </table>

    </div>
</body>
